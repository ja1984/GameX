<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORLD"
            android:textColor="#ffffff"
            />
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rcIconPadding="5dp"
            app:rcIconSize="24dp"
            app:rcIconSrc="@drawable/ic_earth_white_24dp"
            app:rcBackgroundPadding="5dp"
            app:rcBackgroundRadius="5dp"
            app:rcBackgroundColor="#3c3a3b"
            app:rcHeaderColor="@color/red_light"
            app:rcProgressColor="@color/red"
            app:rcProgress="100"
            app:rcMax="100" />
        <View android:layout_width="match_parent" android:layout_height="15dp" />
        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sweden"
            android:textColor="#ffffff"
            />
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/countryProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rcIconPadding="5dp"
            app:rcIconSize="24dp"
            app:rcIconSrc="@drawable/ic_earth_white_24dp"
            app:rcBackgroundPadding="5dp"
            app:rcBackgroundRadius="5dp"
            app:rcBackgroundColor="#3c3a3b"
            app:rcHeaderColor="@color/red_light"
            app:rcProgressColor="@color/red"
            app:rcProgress="100"
            app:rcMax="100" />
    </LinearLayout>

<TextView
    android:id="@+id/kpm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="0"
    />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLICK ME"
        android:padding="32dp"
        style="?android:attr/borderlessButtonStyle"
        />

</LinearLayout>
